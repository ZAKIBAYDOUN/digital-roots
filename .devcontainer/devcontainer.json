{
  "name": "Digital Roots - Cannabis Platform",
  "dockerComposeFile": "docker-compose.yml",
  "service": "digital-roots",
  "workspaceFolder": "/app",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "streamlit_app.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.vscode-docker"
      ]
    }
  },
  "portsAttributes": {
    "8501": {
      "label": "Digital Roots App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8501],
  "postCreateCommand": "echo 'ðŸŒ± Digital Roots development environment ready!'"
}